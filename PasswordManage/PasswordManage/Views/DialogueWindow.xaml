<Window x:Class="PasswordManage.Views.DialogueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManage.Views"
        mc:Ignorable="d"
        Title="DialogueWindow" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            
            <RowDefinition />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button  x:Name="Button_Сancel" Grid.Column="3"  Grid.Row="2" Margin="5,15" Content="Скасувати" Click="Button_Сancel_Click"/>
        <Button  x:Name="Button_Confirm"  Grid.Column="0"  Grid.Row="3" Margin="5,15" Content="Вийти без збереження" Grid.ColumnSpan="2" Click="Button_Confirm_Click" />
        
        <Label Content="В фалі є незбережені зміни" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0" Grid.ColumnSpan="4" FontSize="15"/>

    </Grid>
    
    
</Window>
